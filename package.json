{
  "name": "lumentui",
  "version": "1.0.0",
  "description": "Elegant NestJS-based product monitoring system for shop.lumenalta.com with real-time macOS notifications",
  "author": "Stein Hakase <stein.hakase.vs@gmail.com>",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/steinhakase/lumentui.git"
  },
  "keywords": [
    "nestjs",
    "shopify",
    "monitoring",
    "macos",
    "notifications",
    "cli",
    "typescript",
    "sqlite"
  ],
  "bin": {
    "lumentui": "./dist/cli.js"
  },
  "scripts": {
    "build": "nest build && npm run build:cli && npm run build:ui",
    "build:cli": "tsc -p tsconfig.cli.json && chmod +x dist/cli.js",
    "build:ui": "rm -f tsconfig.ui.tsbuildinfo && tsc -p tsconfig.ui.json && echo '{\"type\":\"module\"}' > dist/ui/package.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/cli.js",
    "start:daemon": "node dist/main.js",
    "dev": "nest start --watch",
    "dev:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.1.0",
    "axios": "^1.13.4",
    "axios-retry": "^4.5.0",
    "better-sqlite3": "^12.6.2",
    "chrome-cookies-secure": "^3.0.1",
    "commander": "^14.0.3",
    "ink": "^5.2.1",
    "keytar": "^7.9.0",
    "nest-winston": "^1.10.2",
    "node-ipc": "^10.1.0",
    "node-machine-id": "^1.1.12",
    "node-notifier": "^10.0.1",
    "react": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@testing-library/react": "^16.3.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/node-ipc": "^9.2.3",
    "@types/node-notifier": "^8.0.5",
    "@types/react": "^18.3.27",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.4.2",
    "react-dom": "^18.3.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.spec.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
