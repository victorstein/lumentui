# ==========================================
# LumentuiAPI Configuration Template
# ==========================================
# Copy this file to .env for development
# Copy this file to .env.production for production

# === Environment ===
NODE_ENV=development

# === Core Settings ===
LOG_LEVEL=info                                    # Options: debug | info | warn | error
LOG_FILE=data/logs/app.log                       # Application log file path

# === Database Configuration ===
DB_PATH=data/lumentui.db                         # SQLite database file path

# === Shopify API Configuration ===
LUMENTUI_SHOP_URL=https://shop.lumenalta.com     # Shopify store URL (DO NOT CHANGE)
SHOPIFY_TIMEOUT_MS=10000                          # API timeout in milliseconds
SHOPIFY_RETRY_ATTEMPTS=3                          # Number of retry attempts on failure

# === Scheduler Configuration ===
LUMENTUI_POLL_INTERVAL=60                         # Polling interval in seconds (60 = 1 minute)
SCHEDULER_ENABLED=true                            # Enable/disable scheduler

# === Notification Configuration ===
NOTIFICATION_ENABLED=true                         # Enable/disable macOS notifications
NOTIFICATION_THROTTLE_MINUTES=60                  # Minimum time between notifications for same product
LUMENTUI_NOTIFY_PRICE_THRESHOLD=0                 # Minimum price change percentage to trigger notification (default: 0, e.g., 10 for 10%+ changes)

# === Authentication ===
LUMENTUI_COOKIES_PATH=data/cookies.json          # Cookie storage path
LUMENTUI_COOKIES=                                 # Manual cookie override (optional)
LUMENTUI_USER_AGENT=LumenTUI/1.0                 # User agent for API requests

# === Chrome Integration ===
CHROME_PROFILE=Default                            # Chrome profile name for cookie extraction

# === IPC Configuration ===
IPC_SOCKET_PATH=/tmp/lumentui.sock                # Unix socket path for IPC communication

# === Path Overrides (Advanced) ===
# These are automatically set to platform-specific defaults, only override if needed
# LUMENTUI_DATA_DIR=/custom/path/to/data         # Override data directory (default: ~/.local/share/lumentui on Unix, %APPDATA%/lumentui on Windows)
# LUMENTUI_CONFIG_DIR=/custom/path/to/config     # Override config directory (default: ~/.config/lumentui on Unix, %APPDATA%/lumentui on Windows)

# === Legacy/Deprecated (kept for compatibility) ===
LUMENTUI_DB_PATH=./data/lumentui.db
LUMENTUI_LOG_LEVEL=info
LUMENTUI_LOG_PATH=./data/lumentui.log
LUMENTUI_BROWSER_HEADLESS=false
LUMENTUI_BROWSER_TIMEOUT=60000
LUMENTUI_NOTIFY_SYSTEM=true
LUMENTUI_NOTIFY_SOUND=true
LUMENTUI_NOTIFY_BANNER=true
LUMENTUI_NOTIFY_MIN_PRICE=0
LUMENTUI_NOTIFY_KEYWORDS=
LUMENTUI_PID_PATH=./data/daemon.pid
