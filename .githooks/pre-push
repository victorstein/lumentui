#!/bin/bash

# Pre-push hook for LumenTUI
# Runs all CI checks before allowing push to remote

echo "ğŸ” Running pre-push checks..."
echo ""

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if any check fails
FAILED=0

# 1. Format check
echo "ğŸ“ Checking code formatting..."
if pnpm run format:check >/dev/null 2>&1; then
  echo -e "${GREEN}âœ… Formatting check passed${NC}"
else
  echo -e "${RED}âŒ Formatting check failed${NC}"
  echo -e "${YELLOW}Run: pnpm run format${NC}"
  FAILED=1
fi
echo ""

# 2. Lint
echo "ğŸ” Running linter..."
if pnpm run lint >/dev/null 2>&1; then
  echo -e "${GREEN}âœ… Linting passed${NC}"
else
  echo -e "${RED}âŒ Linting failed${NC}"
  FAILED=1
fi
echo ""

# 3. Type check
echo "ğŸ”§ Type checking..."
if pnpm run type-check >/dev/null 2>&1; then
  echo -e "${GREEN}âœ… Type check passed${NC}"
else
  echo -e "${RED}âŒ Type check failed${NC}"
  FAILED=1
fi
echo ""

# 4. Tests
echo "ğŸ§ª Running tests..."
if pnpm test >/dev/null 2>&1; then
  echo -e "${GREEN}âœ… Tests passed${NC}"
else
  echo -e "${RED}âŒ Tests failed${NC}"
  FAILED=1
fi
echo ""

# 5. Build
echo "ğŸ—ï¸  Building project..."
if pnpm run build >/dev/null 2>&1; then
  echo -e "${GREEN}âœ… Build passed${NC}"
else
  echo -e "${RED}âŒ Build failed${NC}"
  FAILED=1
fi
echo ""

# Final result
if [ $FAILED -eq 1 ]; then
  echo -e "${RED}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
  echo -e "${RED}âŒ Pre-push checks FAILED${NC}"
  echo -e "${RED}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
  echo ""
  echo "Please fix the errors above before pushing."
  echo ""
  exit 1
else
  echo -e "${GREEN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
  echo -e "${GREEN}âœ… All pre-push checks passed!${NC}"
  echo -e "${GREEN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
  echo ""
  exit 0
fi
